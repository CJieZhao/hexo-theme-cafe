<% if (!is_archive() && site.tags.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('tagcloud') %></h3>
    <div class="widget tagcloud">
      <%- tagcloud(site.tags, {"color":!!theme.tagcloud_color,start_color:"#dc143c",end_color:"#778899"}) %>
    </div>
  </div>
<% } %>